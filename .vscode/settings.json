{
    "files.autoSave": "afterDelay",
    "files.exclude":{
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": {"when": "$(basename).py"}, 
        "**/__pycache__": true
    },
    "git.postCommitCommand": "sync",
    "python.pythonPath": "/usr/local/bin/python3"
}